# =====================================
# Rate Limiting (Disabled for testing)
# =====================================
RATE_LIMIT_ENABLED=false

# =====================================
# Network Gas Price (Base Sepolia testnet)
# =====================================
BASE_SEPOLIA_TARGET_GAS_PRICE=1000000000
BASE_SEPOLIA_ETH_PRICE=3000

# =====================================
# Hook Code Validation
# =====================================
HOOK_CODE_VALIDATION_ENABLED=true
GAS_ESTIMATION_SAFETY_MULTIPLIER=1.2
GAS_ESTIMATION_TIMEOUT_MS=5000

# =====================================
# Token Price (Disabled for testing)
# =====================================
TOKEN_PRICE_ENABLED=false

# =====================================
# V2 Support (Disabled for testing)
